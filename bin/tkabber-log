#!/usr/bin/perl
while (<STDIN>) {
	/^.*?timestamp (.*?) jid (.*?) nick (.*?) body (.*?)( me \d)*$/;
	($time, $nick, $body) = ($1, unescape($3), unescape($4));
	$nick = "$nick: " if $nick;
	print "$time] $nick$body\n";
	#print "$body\n";
}

sub unescape($) {
	$x = shift;
	$x =~ s/(^\{|\}$)//g;
	$x =~ s/\\n/\n/g;
	$x =~ s/\\\\/\\/g;
	return $x;
}
