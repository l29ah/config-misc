# Essentials

"xautolock -locknow; sleep 5; xset dpms force off"
	mod4 + Shift + Control + L

"urxvt"
	mod4 + Control + Return

"dmenu_run"
	mod4 + Shift + Control + P

#"cd ~/.xmonad && hsc2hs xmonad.hsc && xmonad --recompile && xmonad --restart"
"xmonad --recompile && xmonad --restart"
	mod4 + Q


# Sound-related stuff:
"ossmix vmix0-outvol -- +0.5 || { amixer set Master 2%+; amixer -c 1 set PCM 2%+; }"
	XF86AudioRaiseVolume

"ossmix vmix0-outvol -- -0.5 || { amixer set Master 2%-; amixer -c 1 set PCM 2%-; }"
	XF86AudioLowerVolume

#"ossmix `pcmof mpd` -- +0.5"
#	mod4 + Shift + Up
#"ossmix `pcmof mpd` -- -0.5"
#	mod4 + Shift + Down
"mpc seek +00:00:10"
	mod4 + Shift + Right
"mpc seek -00:00:10"
	mod4 + Shift + Left
"mpc seek +00:01:00"
	mod4 + Shift + Up
"mpc seek -00:01:00"
	mod4 + Shift + Down

"mpc next"
	mod4 + Shift + N
	XF86AudioNext

#"amixer set Master toggle"
"ossmix misc.front-mute TOGGLE"
	mod4 + Shift + M
	XF86AudioMute

"mt"
	mod4 + Shift + T
	
"mpc toggle"
	mod4 + Shift + P
	XF86AudioPlay

# Clipboard
"xsel -x"
	mod4 + x
"p=`xsel -p -o`; xsel -b -o | xsel -p -i; echo -n "$p" | xsel -b -i;"
	mod4 + c

# Browsers
"dillo `xclip -o`"
	mod4 + d

"firefox `xclip -o`"
	mod4 + f

"/home/l29ah/bin/uzbl `xclip -o`"
	mod4 + u

